<section id="homeScreen">
    {{#if logged_in}}
    <section class="row justify-content-center text-center" id="postScreen">
        <form id="postForm">
            <div class="form-group">
                <label for="postTitle">Post Title</label>
                <input type="text" class="form-control form-control-lg" id="postTitle" placeholder="Enter post title">
            </div>
            <div class="form-group">
                <label for="postContent">Post Content</label>
                <textarea class="form-control form-control-lg" id="postContent" rows="5"
                    placeholder="Enter post content"></textarea>
            </div>
            <div class="form-group">
                <label for="postTag">Post Tag</label>
                <input type="text" class="form-control" id="postTag" placeholder="Enter post tag">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </section>
    <button id="make-post" class="btn btn-primary">Make Post</button>
    <button id="hide-post-maker" class="btn btn-primary">Hide Post Maker</button>
    {{else}}

    <section class="row justify-content-center text-center" id="welcomeText">
        <p class="col-12 col-md-9 p-4 ">Find My Musician is a website dedicated to connecting musicians with
            other
            like-minded musicians for
            collaboration and project assistance. Our platform allows musicians to easily create an account and
            make
            posts asking for a helping hand or collaboration from other musicians. Whether you're looking for a
            guitarist for your band or a vocalist for your newest song our site offers a user-friendly interface
            to
            help you find the right fit. Join our community of passionate and creative musicians today and take
            your
            musical projects to the next level.</p>
    </section>
    {{/if}}
    <hr class="solid">

    <section id="postFeed">
        <h2>Posts:</h2>
        <p>Click on the titles to read more!</p>
        {{#each posts as |post|}}
        {{!-- console.log(posts) --}}
        {{> post-details}}
        {{/each}}

    </section>


</section>

